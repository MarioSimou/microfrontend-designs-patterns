{
  "name": "microfrontend-design-patterns",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "clean": "turbo run clean --parallel && rm -rf node_modules",
    "lint": "turbo run lint --parallel",
    "build": "turbo run build",
    "start:dev": "ENV_CONFIG=complete turbo run start:dev --parallel",
    "start:prod": "turbo run start:prod --parallel",
    "prettier:format": "prettier --write \"**/*.{ts,tsx,js,html,md}\"",
    "docker:build": "docker-compose build base && turbo run docker:build --parallel",
    "infra:plan": "/usr/bin/terraform -chdir=infrastructure plan",
    "infra:apply": "/usr/bin/terraform -chdir=infrastructure apply --auto-approve",
    "infra:destroy": "/usr/bin/terraform -chdir=infrastructure destroy",
    "infra:format": "/usr/bin/terraform -chdir=infrastructure fmt",
    "infra:upload:env": "./infrastructure/scripts/upload-services-env.sh speakyourownideas"
  },
  "devDependencies": {
    "prettier": "latest",
    "turbo": "latest"
  }
}
