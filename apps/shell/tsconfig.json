{
  "extends": "ts-node/node16/tsconfig.json",
  "compilerOptions": {
    "target": "es2021",
    "moduleResolution": "node",
    "rootDir": ".",
    "baseUrl": ".",
    "typeRoots": ["./node_modules/@types", "./@types"],
    // "paths": {
    //   "@src/*": ["./src/$1"]
    // },
    "outDir": "./dist",
    "allowJs": false,
  },
  "include": ["./src/**/*.ts", "./@types/shell/index.d.ts"],
  "exclude": ["node_modules", "dist"],
  "ts-node": {
    "transpileOnly": true
  }
}
